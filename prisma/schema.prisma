model GlobalSettings {
  id                Int      @id @default(1)
  adminGcashNumber  String   @default("09000000000")
  adminGcashName    String   @default("Admin Name")
  monthlyDuesAmount Float    @default(300.0)
  updatedAt         DateTime @updatedAt
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String
  date        DateTime
  location    String
  category    String   // e.g., "Meeting", "Social", "Maintenance"
  createdAt   DateTime @default(now())
}
